<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet author="TW" id="1">
		<comment>Initialization of database</comment>
		<createTable schemaName="${db.liquibase.schema.name}" tableName="table1" tablespace="${db.liquibase.tablespace.tables}">
			<column name="a" type="int8">
				<constraints nullable="false" />
			</column>
			<column name="b" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<createTable schemaName="${db.liquibase.schema.name}" tableName="table2" tablespace="${db.liquibase.tablespace.tables}">
			<column name="a_id" type="int8" />
			<column name="b_id" type="int8" />
			<column name="c_idn" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
            <column name="ddd" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
		</createTable>
	</changeSet>
</databaseChangeLog>
